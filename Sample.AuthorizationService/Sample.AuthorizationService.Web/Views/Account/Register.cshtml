@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-4 mx-auto">
        <h2>@ViewData["Title"].</h2>

        <form id="registerForm" asp-controller="Account" asp-action="Register" asp-route-returnUrl="@ViewData["returnUrl"]" method="post" class="form-horizontal" role="form">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="GivenName" class="form-control" aria-required="true" />
                <label asp-for="GivenName" class="form-label"></label>
                <span asp-validation-for="GivenName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="FamilyName" class="form-control" aria-required="true" />
                <label asp-for="FamilyName" class="form-label"></label>
                <span asp-validation-for="FamilyName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="MiddleName" class="form-control" aria-required="true" />
                <label asp-for="MiddleName" class="form-label"></label>
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Nickname" class="form-control" aria-required="true" />
                <label asp-for="Nickname" class="form-label"></label>
                <span asp-validation-for="Nickname" class="text-danger"></span>
            </div>
            <div class="form-floating">
                @Html.DropDownList("Gender", Html.GetEnumSelectList<Gender>(), new { @class = "form-control" })
                <label asp-for="Gender" class="form-label"></label>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="BirthDate" class="form-control" aria-required="true" />
                <label asp-for="BirthDate" class="form-label"></label>
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" aria-required="true" />
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="PhoneNumber" class="form-control" aria-required="true" />
                <label asp-for="PhoneNumber" class="form-label"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" class="form-control" aria-required="true" />
                <label asp-for="Password" class="form-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="ConfirmPassword" class="form-control" aria-required="true" />
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
